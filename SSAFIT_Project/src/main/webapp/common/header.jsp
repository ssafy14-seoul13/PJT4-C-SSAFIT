<%@ page contentType="text/html; charset=UTF-8" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
  <title>SSAFIT</title>
  <style>
    body {
      font-family: "Noto Sans KR", sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f8f9fa;
    }
    header {
      background-color: #2c3e50;
      color: white;
      padding: 15px 30px;
    }
    header h1 {
      margin: 0;
      font-size: 20px;
    }
    .container {
      width: 400px;
      margin:100px auto;
      padding: 50px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 12px 12px rgba(0,0,0,0.1);
    }
    input, button {
 	width: 100%;
 	height: 45px;          
  	padding: 0 12px;      
  	margin: 8px 0px;
  	border: 1px solid #ddd;
  	border-radius: 8px;
  	font-size: 14px;
  	box-sizing: border-box; 
	}
    button {
      background: #3498db;
      color: white;
      border: none;
      cursor: pointer;
      transition: 0.2s;
    }
    button:hover {
      background: #2980b9;
    }
    a {
      display: inline-block;
      margin-top: 10px;
      color: #3498db;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <header>
    <h1>SSAFIT Project</h1>
  </header>
